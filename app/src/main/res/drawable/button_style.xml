<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="false">
        <shape>
            <solid
                android:state_pressed="false"
                android:color="@color/sudoku_outline"
                />
            <corners
                android:radius="105dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item
        android:state_pressed="true"
        android:color="@color/sudoku_outline"
        >
        <shape>
            <solid
                android:state_pressed="true"
                android:color="@color/button_highlight_color"
                />
            <corners
                android:radius="105dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>

