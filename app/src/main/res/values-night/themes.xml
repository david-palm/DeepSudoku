<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DeepSudoku" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_overlay</item>
        <item name="colorPrimaryVariant">#003700B3</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/sudoku_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeOverlay.DeepSudoku.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/sudoku_background</item>
        <item name="fullscreenTextColor">@color/sudoku_outline</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
</resources>